{
  "name": "prelude-of-the-chambered-reborn",
  "version": "1.0.0",
  "description": "Prelude of the Chambered: Reborn - A modern TypeScript/Vite port of Notch's classic dungeon crawler",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Angelo Lima",
  "license": "MIT",
  "keywords": [
    "game",
    "raycaster",
    "canvas",
    "typescript",
    "retro"
  ],
  "dependencies": {
    "@playwright/test": "^1.57.0"
  }
}
